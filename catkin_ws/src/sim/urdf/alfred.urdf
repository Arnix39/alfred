<?xml version="1.0"?>
<robot name="Alfred">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.15 0.07 0.10" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.08"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.07 0.10" />
      </geometry>
    </collision>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.035"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0.09 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.03" radius="0.035"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0.09 0 0"/>
    </collision>
  </link>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.035"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="-0.09 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.03" radius="0.035"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="-0.09 0 0"/>
    </collision>
  </link>
  
  <joint name="base_to_right_wheel" type="revolute">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 0 0.035"/>
    <axis xyz="1 0 0"/>
  </joint>

  <joint name="base_to_left_wheel" type="revolute">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0 0.035"/>
    <axis xyz="1 0 0"/>
  </joint>

</robot>