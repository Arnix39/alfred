{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ROS2: Build workspace",
            "type": "shell",
            "command": "colcon build --symlink-install --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "ROS2: Build workspace for Raspberry Pi 3B+",
            "type": "shell",
            "command": "../cross_compile.sh",
            "group": {
                "kind": "build"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "ROS2: Run tests",
            "detail": "Run all unit tests and show results.",
            "type": "shell",
            "command": "colcon test && colcon test-result --all --verbose",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "ROS2: Clean",
            "detail": "Run the clean target",
            "type": "shell",
            "command": "colcon build --cmake-target clean",
            "problemMatcher": "$gcc"
        },
        {
            "label": "ROS2: Purge",
            "detail": "Purge workspace by deleting all generated files.",
            "type": "shell",
            "command": "rm -fr build install log; py3clean .",
            "problemMatcher": []
        }
    ]
}