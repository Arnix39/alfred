{
  "version": "2.0.0",
  "tasks": [
      {
        "label": "Humility: Installation",
        "detail": "Install Humility (Hubris' debugger).",
        "type": "shell",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "command": "cargo",
        "args": [
          "install",
          "--git",
          "https://github.com/oxidecomputer/humility.git",
          "--locked",
          "humility"
        ],
        "group": {
          "kind": "build",
        },
      },
      {
        "label": "Hubris: Prepare workspace",
        "detail": "Copy files to Hubris directory.",
        "type": "shell",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "command": "cp",
        "args": [
          "-R",
          "app/",
          "chips/",
          "drv/",
          "task/",
          "hubris/"
        ],
        "group": {
          "kind": "build",
        },
      },
      {
        "label": "Hubris: Build application",
        "detail": "Build complete application.",
        "type": "shell",
        "options": {
          "cwd": "${workspaceFolder}/hubris"
        },
        "command": "cargo",
        "args": [
          "xtask",
          "dist",
          "app/remote/app.toml",
        ],
        "group": {
          "kind": "build",
        },
      },
      {
        "label": "Hubris: Flash application",
        "detail": "Flash application onto target.",
        "type": "shell",
        "options": {
          "cwd": "${workspaceFolder}/hubris"
        },
        "command": "cargo",
        "args": [
          "xtask",
          "flash",
          "app/remote/app.toml",
        ],
        "group": {
          "kind": "build",
        },
      },
      {
        "label": "Humility: Tasks statistics",
        "detail": "Run Humility on target.",
        "type": "shell",
        "options": {
          "cwd": "${workspaceFolder}/hubris"
        },
        "command": "cargo",
        "args": [
          "xtask",
          "humility",
          "app/remote/app.toml",
          "--",
          "tasks",
        ],
        "group": {
          "kind": "build",
        },
      },
      {
        "label": "Humility: Debug application",
        "detail": "Debug application on target.",
        "type": "shell",
        "options": {
          "cwd": "${workspaceFolder}/hubris"
        },
        "command": "cargo",
        "args": [
          "xtask",
          "gdb",
          "app/remote/app.toml",
          "--",
          "--run-openocd",
        ],
        "group": {
          "kind": "build",
        },
      },
    ]
}